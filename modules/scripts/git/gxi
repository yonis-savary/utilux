#!/bin/sh
# git init - make your projet fresh to start something

set -euo pipefail

# Couleurs pour un affichage stylÃ©

echo "âš ï¸  Warning ! This command will perform a git reset --hard"
read -p "Proceed ? [y/N]:" -n 1 -r
echo

if ! echo "$REPLY" | grep -E '^[Yy]$' > /dev/null; then
    echo "âŒ Aborted."
    exit 1
fi

echo
echo "ğŸ§¹ Cleaning up your repo..."
git reset --hard
git clean -fd

echo
echo "ğŸ” Syncing remote branch with local..."
git for-each-ref --format='%(refname:short)' refs/heads | while read branch ; do
    if [ "$branch" = "main" ]; then
        continue
    fi

    if git show-ref --verify --quiet "refs/remotes/origin/$branch"; then
        git branch --set-upstream-to="origin/$branch" "$branch"
        echo "ğŸ”— Upstream defined for ${branch} â†’ origin/${branch}"
    else
        echo "âš ï¸  No remote branch for ${branch}"
    fi

done

echo
echo "ğŸ“¥ Retrieving missing work..."
gxf
git pull --all


echo
echo "âœ… Your repo is now ready to work with !"