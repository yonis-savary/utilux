#!/bin/sh

set -euo pipefail

if ! utilux-prompt --prompt "âš ï¸  Warning ! This command will perform a git reset --hard, you will lose any un-pushed work ! Continue ?"; then 
    echo "âŒ Aborted."
    exit 1
fi

echo
echo "ðŸ§¹ Cleaning up your repo..."
git reset --hard
git clean -fd
gxpm

echo
echo "ðŸ“¥ Retrieving missing work (1/2)..."
gxf

echo
echo "ðŸ” Syncing remote branch with local..."
git for-each-ref --format='%(refname:short)' refs/heads | while read branch ; do
    if [ "$branch" = "main" ]; then
        continue
    fi

    if git show-ref --verify --quiet "refs/remotes/origin/$branch"; then
        git branch --set-upstream-to="origin/$branch" "$branch" 2>&1 >/dev/null \
         && echo "ðŸ”— Bound ${branch} to origin/${branch}" \
         || echo "âš ï¸ Could not bind ${branch} to origin/${branch}"
    else
        echo "âš ï¸  No remote : ${branch}"
    fi

done

echo
echo "ðŸ“¥ Retrieving missing work (2/2)..."
original_branch=$(gxb)
git for-each-ref --format='%(refname:short)' refs/heads | while read branch ; do
    git checkout "$branch" >/dev/null
    git pull >/dev/null && echo "Branch pulled successfuly"
done
git checkout "$original_branch"

echo
echo "âœ… Your repo is now ready to work with !"