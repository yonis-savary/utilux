#!/bin/sh

set -euo pipefail

if ! utilux-prompt --prompt "âš ï¸  Warning ! This command will perform a git reset --hard, continue ?"; then 
    echo "âŒ Aborted."
    exit 1
fi

echo
echo "ğŸ§¹ Cleaning up your repo..."
git reset --hard
git clean -fd


echo
echo "ğŸ“¥ Retrieving missing work (1/2)..."
gxf

echo
echo "ğŸ” Syncing remote branch with local..."
git for-each-ref --format='%(refname:short)' refs/heads | while read branch ; do
    if [ "$branch" = "main" ]; then
        continue
    fi

    if git show-ref --verify --quiet "refs/remotes/origin/$branch"; then
        git branch --set-upstream-to="origin/$branch" "$branch" 2>&1 >/dev/null \
         && echo "ğŸ”— Bound ${branch} to origin/${branch}" \
         || echo "âš ï¸ Could not bind ${branch} to origin/${branch}"
    else
        echo "âš ï¸  No remote : ${branch}"
    fi

done

echo
echo "ğŸ“¥ Retrieving missing work (2/2)..."
git pull --all

echo
echo "âœ… Your repo is now ready to work with !"