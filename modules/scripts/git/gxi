#!/bin/sh

set -euo pipefail

if ! utilux-prompt --prompt "⚠️  Warning ! This command will perform a git reset --hard, continue ?"; then 
    echo "❌ Aborted."
    exit 1
fi

echo
echo "🧹 Cleaning up your repo..."
git reset --hard
git clean -fd

echo
echo "🔁 Syncing remote branch with local..."
git for-each-ref --format='%(refname:short)' refs/heads | while read branch ; do
    if [ "$branch" = "main" ]; then
        continue
    fi

    if git show-ref --verify --quiet "refs/remotes/origin/$branch"; then
        git branch --set-upstream-to="origin/$branch" "$branch"
        echo "🔗 Bound ${branch} to origin/${branch}"
    else
        echo "⚠️  No remote : ${branch}"
    fi

done

echo
echo "📥 Retrieving missing work..."
gxf
git pull --all


echo
echo "✅ Your repo is now ready to work with !"